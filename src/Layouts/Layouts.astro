---
import Header from '../Components/Header.astro';
import Footer from '../Components/Footer.astro';

// Definici√≥n de las propiedades
export interface Props {  
  title: string; 
  header: string;
}

const { title, header } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/src/styles/wave.css">
    <title>{title}</title>
</head>
<body class="bg-gradient-to-br from-[#69d9e7] to-black min-h-screen flex flex-col">
    <div class="flex flex-row flex-grow">
        <!-- Barra lateral -->
        <div class="w-64 bg-black text-white flex flex-col h-screen">
            <Header />
        </div>
        <!-- Contenedor principal para contenido y footer -->
        <div class="flex-grow flex flex-col">
            <main class="flex-grow max-w-4xl mx-auto mt-10 px-8">
                <!-- Usar la propiedad 'header' en el contenido principal -->
                <h1 class="text-white">{header}</h1> <!-- Texto en blanco para mayor visibilidad -->
                <slot />
            </main>
            <Footer class="mt-auto"/> <!-- Asegurar que el footer se empuje hacia abajo -->
        </div>
    </div>
</body>
</html>